{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Definition",
  "description": "A wpm definition",
  "type": "object",
  "required": [
    "service",
    "unit"
  ],
  "properties": {
    "service": {
      "description": "Information about what this definition executes",
      "allOf": [
        {
          "$ref": "#/definitions/Service"
        }
      ]
    },
    "unit": {
      "description": "Information about this definition and its dependencies",
      "allOf": [
        {
          "$ref": "#/definitions/Unit"
        }
      ]
    }
  },
  "definitions": {
    "Healthcheck": {
      "oneOf": [
        {
          "type": "object",
          "required": [
            "Command"
          ],
          "properties": {
            "Command": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": [
            "LivenessSeconds"
          ],
          "properties": {
            "LivenessSeconds": {
              "type": "integer",
              "format": "uint64",
              "minimum": 0.0
            }
          },
          "additionalProperties": false
        }
      ]
    },
    "Service": {
      "description": "Information about what a wpm definition executes",
      "type": "object",
      "required": [
        "executable"
      ],
      "properties": {
        "arguments": {
          "description": "Arguments passed to the executable",
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": "string"
          }
        },
        "autostart": {
          "description": "Autostart this definition with wpmd",
          "default": false,
          "type": "boolean"
        },
        "environment": {
          "description": "Environment variables for this service definition",
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": "array",
            "items": [
              {
                "type": "string"
              },
              {
                "type": "string"
              }
            ],
            "maxItems": 2,
            "minItems": 2
          }
        },
        "executable": {
          "description": "Executable name or absolute path to an executable",
          "type": "string"
        },
        "healthcheck": {
          "description": "Healthcheck for this service definition",
          "default": {
            "LivenessSeconds": 1
          },
          "allOf": [
            {
              "$ref": "#/definitions/Healthcheck"
            }
          ]
        },
        "kind": {
          "description": "Type of service definition",
          "default": "Simple",
          "allOf": [
            {
              "$ref": "#/definitions/ServiceType"
            }
          ]
        },
        "shutdown": {
          "description": "Shutdown command for this definition (default: taskkill /F /PID <PID>)",
          "type": [
            "string",
            "null"
          ]
        }
      }
    },
    "ServiceType": {
      "type": "string",
      "enum": [
        "Simple",
        "Oneshot"
      ]
    },
    "Unit": {
      "description": "Information about a wpm definition and its dependencies",
      "type": "object",
      "required": [
        "name"
      ],
      "properties": {
        "description": {
          "description": "Description of this definition",
          "type": [
            "string",
            "null"
          ]
        },
        "name": {
          "description": "Name of this definition, must be unique",
          "type": "string"
        },
        "requires": {
          "description": "Dependencies of this definition, validated at runtime",
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}
